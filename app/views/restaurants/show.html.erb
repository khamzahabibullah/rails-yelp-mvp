<h1 class="text-center mb-4"><%= @restaurant.name %></h1>

<dl class="dl-horizontal d-flex justify-content-around border-bottom mb-4 pb-4">
  <div>
  <dt>Address</dt>
  <dd><%= @restaurant.address %></dd>
  </div>
  <div>
  <dt>Contact</dt>
  <dd><%= @restaurant.phone_number %></dd>
  </div>
  <div>
  <dt>Cuisine</dt>
  <dd><%= @restaurant.category %></dd>
  </div>
</dl>

<h3>Reviews</h3>
<%# <p><%= link_to '+ Add a new review', new_restaurant_review_path(@restaurant), class: 'btn btn-primary' %>
<%= simple_form_for([@restaurant, @review]) do |f| %>
  <%# <%= f.error_notification %>
  <%# <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :content %>
    <%= f.input :rating, collection: (0..5) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary' %>
  </div>
<% end %>
<ul class="list-group mt-5">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item d-flex justify-content-between mb-5 align-items-center">
      <h5 class="m-0"><%= review.content %></h5>
      <p class="m-0"><%= review.rating %></p>
    </li>
  <% end %>
</ul>

<%= link_to 'Back', restaurants_path, class: 'btn btn-secondary' %>
